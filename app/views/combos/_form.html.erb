<%= form_for(combo) do |f| %>
  <% if combo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(combo.errors.count, "error") %> prohibited this combo from being saved:</h2>

      <ul>
      <% combo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  
  <div>
    <label>Products</label>
    <% @products.each do |product| %>
      <div class="field">
        <%= check_box_tag "products[]", product.id %> <%= product.title %>
      </div>  
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
