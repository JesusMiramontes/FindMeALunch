  <script type="text/javascript">
       function toggle_visibility(id, id2, id3, id4) {
       var e = document.getElementById(id);
       var e2 = document.getElementById(id2);
       var e3 = document.getElementById(id3);
       var e4 = document.getElementById(id4);

        if(e2.style.display == 'block')
          e2.style.display = 'none';

        if(e3.style.display == 'block')
          e3.style.display = 'none';

        if(e4.style.display == 'block')
          e4.style.display = 'none';

       if(e.style.display == 'block')
          e.style.display = 'none';
       else
          e.style.display = 'block';
    }

    function addRowSidebar(data){
        var ul = document.getElementById('cart');
        var li = document.createElement('li');
        var btnData = document.getElementById(data);
        var btnDataPrice = btnData.getAttribute('data-price');
        var btnDataName = btnData.getAttribute('data-name');
        var pTotal = document.getElementById('total');
        var total = pTotal.getAttribute('data-value');
        var newTotal = Number(total) + Number(btnDataPrice);
        var btnID = btnData.getAttribute('id'); 
        var rowID = (String(btnID)).charAt(0);
        var btnClose = '<a href="#" style="float:right" onclick="deleteRowFromCart('+String(rowID) +');"><i class="fa fa-times" aria-hidden="true"></i></a>';
        pTotal.innerHTML= "$" + (String(newTotal));
        pTotal.setAttribute("data-value", String(newTotal));
        li.appendChild(document.createTextNode(String(btnDataName) + " $" + String(btnDataPrice) ));
        li.innerHTML += String(btnClose);
        li.setAttribute("class","list-group-item");
        li.setAttribute("data-unit", String(btnDataPrice));
        li.setAttribute("id", rowID);
        ul.appendChild(li);    
    }

    function appendToSection(id, section, heading, description, price){
      var start = '<div class="col-xs-8 col-lg-3 col-sm-6 col-md-4" >';
      var passId = "'" + String(id) + "b'";
      var final = String(start) + "<h2>" + String(heading) + '</h2>' + '<p style="height: 80px; overflow-y: scroll">' + String(description) + '</p>' + '<p>' +
        '<b> $' + String(price) + '</p></b>' + '<p><a class="btn btn-default" href="#" ' + 
        'id="' + String(id) + 'b"'  + ' style="float:right" ' + 
        'data-price="' + String(price)  + '" data-name="'+ String (heading) + '" onclick="addRowSidebar(' +
         String(passId) + ');">Agregar Â»</a></p></div>';
      document.getElementById(String(section)).innerHTML += String(final);
      console.log(String(start) + ' CLASS: ' + String(section) + ' passId: ' + String(passId));
    }

    function deleteRowFromCart(element){
      var e = document.getElementById(element);
      e.parentNode.removeChild(e);
      var pTotal = document.getElementById('total');
      var pTotalPrice = pTotal.getAttribute('data-value');
      var price = e.getAttribute('data-unit');
      var newTotal = Number(pTotalPrice) - Number(price);
      pTotal.innerHTML= "$" + (String(newTotal));
      pTotal.setAttribute("data-value", String(newTotal));
      console.log(String(pTotal) + ' Precio de fila: ' + String(price) + ' Nuevo Total: ' + String(newTotal));
    }

  </script>
</head>

<!--Fin de script -->


